@using Core.Application.ViewModels.Users
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="col-12 d-flex justify-content-center">
    <div class="col-5 mt-5">
        <form asp-action="Index" method="post" asp-controller="User">
            @Html.ValidationSummary(false, "", new{@class = "text-danger"})
            @if(Model.HasError == true)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <p>@Model.Error</p>
                    <button class="btn btn-close" data-bs-dismiss="alert" arial-label="Close"></button>
                </div>
            }

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Correo del usuario</label>
                <input asp-for="Email" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Contrasena</label>
                <input asp-for="Password" class="form-control">
                <span asp-validation-for="Password" class="form-label text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-success float-end">Login</button>
                <a asp-action="Register" asp-controller="User" class="btn btn-outline-info float-end">Register</a>
            </div>

            <div class="d-flex mt-3">
                <a asp-action="ForgotPassword" asp-controller="User" class="text-primary float-end">ForgotPassword</a>
            </div>
        </form>
    </div>
</div>
