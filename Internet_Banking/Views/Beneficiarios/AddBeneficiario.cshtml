@using Core.Application.ViewModels.Beneficiarios
@model SaveBeneficiarioViewModel
@{
    ViewData["Title"] = "Beneficiario";
}

<div class="col-12 d-flex justify-content-center">
    <div class="col-5 mt-5">
        <form method="post" asp-action="AddBeneficiario" asp-controller="Beneficiarios">

            <div class="card">
                <div class="card-header">
                    <h4>Agregar beneficiario</h4>
                </div>
                <div class="card-body">
                    @Html.ValidationSummary(false, "", new{@class = "text-danger"})

                    @if (Model.HasError == true)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <p>@Model.Error</p>
                            <button class="btn btn-close" data-bs-dismiss="alert" arial-label="Close"></button>
                        </div>
                    }

                    <div class="form-outline mb-4">
                        <input asp-for="IdAccount" class="form-control" />
                        <label asp-for="IdAccount" class="form-label">Numero de cuenta</label>
                    </div>

                    <!-- Submit button -->
                    <button type="submit" class="btn btn-primary btn-block mb-3">Registrarse</button>
                </div>
            </div>
        </form>
    </div>
</div>
