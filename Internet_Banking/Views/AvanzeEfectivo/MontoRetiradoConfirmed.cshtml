@using Core.Application.ViewModels.Pagos
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Core.Application.Dtos.Pagos;
@model PagoAvanceEfectivoResponse
@{
    ViewData["Title"] = "Confirmacion de retiro tarjeta";
}
@section scripts {
    <script>
        Swal.fire({
            position: 'center',
            icon: 'success',
            title: 'Transaccion confirmada!',
            showConfirmButton: false,
            timer: 2000
        })
    </script>
}

<div class="col-12 d-flex justify-content-center">
    <div class="col-5 mt-5">
        <div class="card">
            <div class="card-header">
                <h2>Avance efectivo</h2>
            </div>
            <div class="card-body">
                
                <div class="form-outline mb-4">
                    <h3>Retiro realizado por:</h3>
                    <label>@Model.FirstNameOrigen @Model.LastNameOrigen</label>
                </div>

                <div class="form-outline mb-4">
                    <h3>Num tarjeta</h3>
                    <label>@Model.NumeroTarjeta</label>
                </div>

                <div class="form-outline mb-4">
                    <h3 class="me-2">Monto Retirado de la tarjeta</h3>
                    <label>$@Model.Monto</label>
                </div>
            
                <div class="form-outline mb-4">
                    <h3 class="me-2">Monto Cargado a la deuda de la tarjeta</h3>
                    <label>$@Model.MontoCargado</label>
                </div>
                
                <div class="form-outline mb-4">
                    <h3 class="me-2">Cuenta de ahorro a la que deposito:</h3>
                    <label>$@Model.oldMontoCuenta ----> $@Model.newMontoCuenta</label>
                </div>

                <a asp-action="Index" asp-controller="Home" class="btn btn-secondary btn-block mb-3">Volver al home</a>
            </div>
        </div>
    </div>
</div>
