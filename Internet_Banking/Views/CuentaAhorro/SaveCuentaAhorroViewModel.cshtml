@using Core.Application.ViewModels.CuentaAhorros;
@model SaveCuentaAhorroViewModel
@{
    ViewData["Title"] = "Cuenta ahorro";
}

<div class="col-12 d-flex justify-content-center">
    <div class="col-5 mt-5">
        <form method="post" asp-action="AgregarCuentaAhorro" asp-controller="CuentaAhorro">

            <div class="card">
                <div class="card-header">
                    <h4>Registrarse</h4>
                </div>
                <div class="card-body">
                    @Html.ValidationSummary(false, "", new{@class = "text-danger"})

                    
                    <div class="form-outline mb-4">
                        <input hidden asp-for="Id" class="form-control" />
                    </div>

                    
                    <div class="form-outline mb-4">
                        <input hidden asp-for="NumeroCuenta" class="form-control" />
                    </div>

                    
                    <div class="form-outline mb-4">
                        <input  asp-for="Balance" class="form-control" />
                    </div>

                    
                    <div class="form-outline mb-4">   
                        <input hidden asp-for="Principal" class="form-control" />
                    </div>

                    <div class="form-outline mb-4">
                        <input hidden asp-for="IdProduct" type="email" class="form-control" />
                    </div>


                    <!-- Submit button -->
                    <button type="submit" class="btn btn-primary btn-block mb-3">Crear cuenta ahorro</button>
                </div>
            </div>
        </form>
    </div>
</div>
